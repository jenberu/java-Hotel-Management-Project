<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="root" alignment="center" hgap="10" style="-fx-background-color: yellow;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171">
    <Label text="Employee ID:" textFill="#1ab96e" GridPane.columnIndex="0" GridPane.rowIndex="0">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="employeeIdField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="First Name:" textFill="#1cb54c" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="firstNameField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Last Name:" textFill="#2bae99" GridPane.columnIndex="0" GridPane.rowIndex="2">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="lastNameField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="Position:" textFill="#27b562" GridPane.columnIndex="0" GridPane.rowIndex="3">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="positionField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Label text="Department:" textFill="#2c9a30" GridPane.columnIndex="0" GridPane.rowIndex="4">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="departmentField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Phone Number:" textFill="#1fb545" GridPane.columnIndex="0" GridPane.rowIndex="5">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="phoneNumberField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Email:" textFill="#1fe488" GridPane.columnIndex="0" GridPane.rowIndex="6">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="emailField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Gender:" textFill="#32a850" GridPane.columnIndex="0" GridPane.rowIndex="7">
      <font>
         <Font size="18.0" />
      </font></Label>

    <Label text="Salary:" textFill="#1b8646" GridPane.columnIndex="0" GridPane.rowIndex="8">
      <font>
         <Font size="18.0" />
      </font></Label>
    <TextField fx:id="salaryField" style="-fx-border-color: blue; -fx-border-width: 2;" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   <FlowPane hgap="10.0" prefHeight="200.0" prefWidth="200.0" vgap="10.0" GridPane.columnIndex="1" GridPane.rowIndex="7">
      <children>
         <RadioButton fx:id="male" mnemonicParsing="false" text="Male">
            <font>
               <Font size="18.0" />
            </font>
         </RadioButton>
         <RadioButton fx:id="femal" mnemonicParsing="false" text="Female">
            <font>
               <Font size="18.0" />
            </font>
         </RadioButton>
      </children>
   </FlowPane>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints maxHeight="30.0" />
      <RowConstraints />
   </rowConstraints>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>

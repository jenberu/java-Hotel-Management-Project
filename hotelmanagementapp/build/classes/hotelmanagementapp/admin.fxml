<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="root" prefHeight="600" prefWidth="800" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Text fx:id="txt" text="Welcome, dear admin" font="24.0" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <HBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <Button fx:id="addStaffBtn" text="Add Staff" />
            <Button fx:id="addRoomBtn" text="Add Room" />
            <Button fx:id="viewRoomBtn" text="View Room" />
            <Button fx:id="viewReservedRoomBtn" text="View Reserved Room" />
            <Button fx:id="viewBillBtn" text="Billing Info" />
        </HBox>
    </center>
</BorderPane